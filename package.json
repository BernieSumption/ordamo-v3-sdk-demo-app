{
  "name": "ordamo-v3-sdk-demo-app",
  "version": "1.0.0",
  "description": "A demo application that uses the ordamo-v3-sdk package. This can be used as a template for new Ordamo V3 apps.",
  "scripts": {
    "build": "npm-run-all build:clean build:ts build:static build:browserify",
    "build:clean": "rimraf __tmp_build",
    "build:ts": "tsc -p src",
    "build:static": "cpx 'src/**/*.!(ts)' __tmp_build",
    "build:browserify": "browserify __tmp_build/index.js --outfile __tmp_build/index.compiled.js",
    "release": "npm-run-all release:superclean test release:build release:minify",
    "release:superclean": "rimraf node_modules && npm install",
    "release:build": "npm run build --production",
    "release:minify": "uglifyjs __tmp_build/index.compiled.js --screw-ie8 --compress warnings=false --beautify --output release/$npm_package_name-$npm_package_version.js",
    "start": "npm run watch",
    "watch": "npm-run-all build:clean build:ts build:static mockcontent --parallel watch:ts watch:static watch:serve watch:tests",
    "watch:ts": "tsc -p src --watch",
    "watch:static": "cpx 'src/**/*.!(ts)' __tmp_build --watch",
    "watch:serve": "beefy __tmp_build/index.js --cwd __tmp_build --live",
    "watch:tests": "mocha __tmp_build/tests/*.js --colors --watch",
    "mockcontent": "npm-run-all mockcontent:compile",
    "mockcontent:compile": "node -e 'console.log(JSON.stringify(require(\"./mockcontent\")()))' > __tmp_build/mockcontent.json",
    "mockcontent:rename": "cpx __tmp_build/mockcontent.json __tmp_build/mockcontent",
    "test": "npm-run-all build:clean build:ts test:unit test:lint",
    "test:lint": "tslint 'src/**/*.ts'",
    "test:unit": "mocha __tmp_build/tests/*.js --colors"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BernieSumption/ordamo-v3-sdk-demo-app.git"
  },
  "browserify": {
    "transform": [
      "lessify",
      "jadeify",
      "brfs",
      "urify/transform",
      "envify"
    ]
  },
  "author": "Bernie Sumption <bernie@berniecode.com> (http://berniesumption.com/)",
  "license": "SEE LICENSE IN <LICENSE.txt>",
  "devDependencies": {
    "beefy": "^2.1.6",
    "brfs": "^1.4.3",
    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "cpx": "^1.3.1",
    "envify": "^3.4.0",
    "jade": "^1.11.0",
    "jadeify": "^4.6.0",
    "less": "^2.6.1",
    "lessify": "^1.0.1",
    "mocha": "^2.4.5",
    "npm-run-all": "^1.7.0",
    "ordamo-v3-sdk": "^1.0.0",
    "rimraf": "^2.5.2",
    "tslint": "^3.7.1",
    "typescript": "^1.8.9",
    "uglify-js": "^2.6.2",
    "urify": "^2.0.2"
  }
}
